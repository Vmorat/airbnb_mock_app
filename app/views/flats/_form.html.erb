<%= simple_form_for(flat) do |f| %>
  <%= f.input :property_name %>
  <div class="height: 100px"><%= f.input :description, as: :text %></div>
  <%= f.input :property_type, as: :select, collection: ["House","Apartment"]%>
  <%= f.input :address %>

  <div class = "d-flex justify-content-between" >
    <%= f.input :city %>
    <%= f.input :country %>
  </div>

  <div class = "d-flex m-2" >
    <i class="fas fa-bed p-1"></i> <%= f.input :bedrooms, as: :integer %>
    <i class="fas fa-bath p-1"></i><%= f.input :bathrooms, as: :integer %>
    <i class="fas fa-users p-1"></i><%= f.input :max_guests, as: :integer %>
  </div>

  <div class= "d-flex justify-content-start align-self-end">
    <%= f.input :price_per_night %>
  </div>

  <%= f.input :amenities %>
  <%# <%= f.input :picture_url %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>

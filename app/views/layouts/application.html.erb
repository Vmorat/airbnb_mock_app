
<!DOCTYPE html>
<html>
  <head>
    <title>AIRBNBMockApp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  </head>

  <body>
    <%= render "shared/navbar" %>

    <%= yield %>

    <!-- Container for Devise alerts -->
    <div id="devise-alerts">
      <!-- Devise alert messages will be displayed here -->
      <% flash.each do |type, message| %>
        <div class="alert alert-<%= type %>">
          <%= message %>
        </div>
      <% end %>
    </div>

    <!-- Include jQuery library -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Include custom JavaScript for handling Devise alerts -->
    <script src="/assets/devise_alerts.js"></script>
  </body>
</html>

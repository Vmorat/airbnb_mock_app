<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url(https://images.unsplash.com/photo-1433838552652-f9a46b332c40?q=80&w=1000&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxleHBsb3JlLWZlZWR8Mnx8fGVufDB8fHx8fA%3D%3D)">
  Explore
</div>

  <div class="row p-2">

    <div class="col-6">
    <%# Map %>
      <div class="map">
        <div style="width: 100%; height: 500px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>

    <div class="col-6">
      <h2>Listings</h2>
      <div class="">
      <% @flats.each do |flat| %>
        <%= link_to flat_path(flat), class: "listing-card" do %>
        <div class="card-flat">
            <%= image_tag("flat1.webp", alt: "Listing Image") %>
            <div class="card-flat-infos">
            <h2><%= flat.property_name%></h2>
            <span>$<%= flat.price_per_night %>/night</span>
          </div>
        </div>
        <% end %>
      <% end %>
      </div>
    </div>

  </div>
